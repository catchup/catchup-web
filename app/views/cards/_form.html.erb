<%= form_for [board, card] do |f| %>
  <%= f.text_field :title, placeholder: t("cards.create.title-placeholder") %>
  <%= f.text_field :app_name, placeholder: t("cards.create.app-name-placeholder") %>
  <%= f.text_field :branch_tarball, placeholder: t("cards.create.tarball-placeholder") %>
  <%= f.submit t("cards.create.submit") %>
<% end %>
