<div class="board-wrapper">
  <div class="board new-board clearfix">
    <%= form_for board, html: { class: 'board-form clearfix' } do |f| %>
      <%= f.text_area :title, class: 'textarea', placeholder: t("boards.create.title-placeholder") %>
      <%= button_tag t('boards.create.submit'), class: 'submit' %>
    <% end %>
  </div>
</div>
